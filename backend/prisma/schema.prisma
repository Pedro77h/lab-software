// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model orders {
  id           String    @id @default(uuid())
  pratos       pratos[]
  bebidas      bebidas[]
  costumerName String
  isDelivered  Int?      @default(0)
  orderedAt    DateTime? @default(now())
}

model pratos {
  id       String   @id @default(uuid())
  nome     String
  price    Float
  orders   orders[]
  ordersId String?
}

model bebidas {
  id       String   @id @default(uuid())
  nome     String
  price    Float
  orders   orders[]
  ordersId String?
}

model garcom {
  id    String @id @default(uuid())
  nome  String
  senha String
}
